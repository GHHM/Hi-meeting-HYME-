<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11.5">

    <!-- blank -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- speaker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/activity_speech_speaker"
            android:textSize="20dp" />
    </LinearLayout>

    <!-- speaker name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_speech_speaker_name" />
    </LinearLayout>

    <!-- speaker image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/speaker"
            android:backgroundTint="@color/gray" />
    </LinearLayout>

    <!-- speech box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ScrollView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/speech_box"
            android:backgroundTint="#717171"
            android:paddingTop="25dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_speech_say"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:textColor="#ffffff" />
        </ScrollView>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <!-- speech wanted -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/cleanBlue"
            android:text="@string/activity_speech_want"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <!-- meeting participants -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/lightBlue"
            android:text="@string/activity_speech_participants"
            android:textColor="@color/cleanBlue"/>
    </LinearLayout>

</LinearLayout>